<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid
        android:color="#FFFFFF" >
    </solid>

    <!-- view border color and width -->
    <stroke
        android:width="1dp"
        android:color="#ef4444" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="4dp"
        android:top="5dp"
        android:right="4dp"
        android:bottom="5dp"    >
    </padding>

