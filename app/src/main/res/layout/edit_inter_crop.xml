<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/selectedItemTxt"
            style="@style/header_h1_text_title_with_background"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/inputTypeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title1"
                        style="@style/header_h1_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/inputBox"
                        style="@style/editTxt_normal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:maxLength="30"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inputTypeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/title2"
                        style="@style/header_h1_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/inputBox2"
                        style="@style/editTxt_normal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:maxLength="30"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <TextView
                    style="@style/header_h1_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="Roboto_Regular"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:text="Inter Crop*" />

                <Spinner
                    android:id="@+id/inputSpin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_bg" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/header_h1_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="Roboto_Regular"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="Recommendation Crop*" />

            <Spinner
                android:id="@+id/recommendationCropSpn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelBtn"
                style="@style/dialogBasicBtnStyle"
                android:layout_margin="10dp"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/saveBtn"
                style="@style/dialogBasicBtnStyle"
                android:layout_margin="10dp"
                android:text="@string/save" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>