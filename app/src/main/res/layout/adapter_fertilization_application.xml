<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
<LinearLayout
    android:id="@+id/mainll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/fertizier_LL"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFirst"
            style="@style/textbasic_titleee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/tvSecond"
            style="@style/textbasic_titleee"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="" />

        <TextView
            android:id="@+id/tvThird"
            style="@style/textbasic_titleee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sourceText"
            style="@style/textbasic_titlee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Source of Fertilizer" />

        <TextView
            android:id="@+id/typeText"
            style="@style/textbasic_titlee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Type of Fertilizer" />


        <TextView
            android:id="@+id/FProductNameText"
            style="@style/textbasic_titlee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fertilizer Product Name" />

        <RelativeLayout
            android:id="@+id/editLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">



            <ImageView
                android:visibility="gone"
                android:id="@+id/deleteIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/garbage" />

        </RelativeLayout>


    </LinearLayout>
    <View
        android:id="@+id/layout_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green_dark"
        />
    <TextView
        android:id="@+id/recommendations_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Recommended"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/recom_chemicals_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:visibility="visible"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sourceText12"
            style="@style/textbasic_titleee"
            android:layout_width="0dp"
            android:lines="2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"/>

        <TextView
            android:id="@+id/typeText12"
            style="@style/textbasic_titleee"
            android:layout_width="0dp"
            android:lines="2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"/>

        <TextView
            android:id="@+id/uomper"
            style="@style/textbasic_titleee"
            android:layout_width="0dp"
            android:lines="2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"/>


        <TextView
            android:id="@+id/FProductNameText12"
            style="@style/textbasic_titleee"
            android:layout_width="0dp"
            android:lines="2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/recom_chemicals_data_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:visibility="visible">


        <TextView
            android:id="@+id/sourceText1"
            style="@style/textbasic_titlee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recommnd Fertilizer" />

        <TextView
            android:id="@+id/typeText1"
            style="@style/textbasic_titlee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recommnd Fertilizer" />

        <TextView
            android:id="@+id/uompercount"
            style="@style/textbasic_titlee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recommnd Fertilizer" />


        <TextView
            android:id="@+id/FProductNameText1"
            style="@style/textbasic_titlee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fertilizer Product Name" />

    </LinearLayout>
</LinearLayout>


    <TextView
        android:id="@+id/norecord_tv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="No Records Found"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/parent"
        android:background="@android:color/transparent"

        ></View>


</android.support.v7.widget.CardView>