<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/rounded_background"
    android:orientation="vertical">
    <Button
        android:id="@+id/firstRel"
        style="@style/newmoduleBtnStyle"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/new_farmer_registration"/>
    <Button
        android:id="@+id/secondRel"
        style="@style/newmoduleBtnStyle"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/new_plot_registration"/>

    <Button
        android:id="@+id/thirdRel"
        style="@style/newmoduleBtnStyle"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/follow_up"/>
</LinearLayout>