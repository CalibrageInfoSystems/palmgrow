<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout

        android:id="@+id/fertnamell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:weightSum="1"
        >

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:text="Fertilizer Name"
            android:gravity="center_vertical"/>

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:text=" :  "/>

        <TextView
            android:id="@+id/fertname"
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.4" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/fertapplieddatell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:weightSum="1"
        >

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:text="Last Applied Date"
            android:gravity="center_vertical"/>

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:text=" :  "/>

        <TextView
            android:id="@+id/fertapplieddate"
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.4" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/fertdosagell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:weightSum="1">

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:text="Dosage"
            android:gravity="center_vertical"/>

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:text=" :  "/>

        <TextView
            android:id="@+id/fertdosage"
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.4" />
    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green"/>

</LinearLayout>