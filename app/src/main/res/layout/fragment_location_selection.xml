<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".areaextension.location.LocationSelectionScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/regionTxt"
            style="@style/header_h1_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_logo"
            android:layout_marginTop="30dp"
            android:fontFamily="Roboto_Regular"
            android:gravity="left"
            android:padding="5dp"
            android:text="Region"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/regionSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/spinnerStyle"

            android:visibility="gone"/>


        <TextView
            android:id="@+id/stateTxt"
            style="@style/header_h1_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_logo"
            android:layout_marginTop="30dp"
            android:fontFamily="Roboto_Regular"
            android:gravity="left"
            android:padding="5dp"
            android:text="@string/State" />

        <Spinner
            android:id="@+id/statespin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            style="@style/spinner_bg"
           />

        <TextView
            android:id="@+id/districtTxt"
            style="@style/header_h1_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_logo"
            android:layout_marginTop="30dp"
            android:fontFamily="Roboto_Regular"
            android:gravity="left"
            android:padding="5dp"
            android:text="@string/District" />

        <Spinner
            android:id="@+id/districtSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            style="@style/spinner_bg"
          >

        </Spinner>

        <TextView
            android:id="@+id/mandalTxt"
            style="@style/header_h1_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_logo"
            android:layout_marginTop="30dp"
            android:fontFamily="Roboto_Regular"
            android:gravity="left"
            android:padding="5dp"
            android:text="@string/Mandal" />

        <Spinner
            android:id="@+id/mandalSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/spinner_bg">

        </Spinner>

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_logo"
            android:layout_marginTop="30dp"
            android:fontFamily="Roboto_Regular"
            android:gravity="left"
            android:padding="5dp"
            android:text="@string/Village" />

        <Spinner
            android:id="@+id/villageSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/spinner_bg">

        </Spinner>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_layout"
            android:orientation="horizontal">

            <TextView
                style="@style/header_h1_text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/Cluster" />

            <TextView
                android:id="@+id/Cluster_Name"
                style="@style/header_h1_text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


        <Button
            android:id="@+id/submitBtn"
            style="@style/basicBtnStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="@string/submit_btn" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
