<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_common"/>

    <LinearLayout
        android:paddingTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:clickable="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ganodermaInfestationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mailLayMargin"
                    android:layout_marginRight="@dimen/mailLayMargin"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/mailLayMargin">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lastvisitdataBtn"
                        style="@style/dialogBasicBtnStyle"
                        android:text="@string/last_visit_data"
                        android:padding="4dp"
                        android:layout_gravity="end"/>

                    <!--                    Image-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@mipmap/ic_rsz_framepng"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/sec_rel"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="end"
                            android:background="@mipmap/image">


                            <ImageView
                                android:id="@+id/ganodermaImageView"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_marginRight="5dp"
                                android:scaleType="fitXY"
                                android:visibility="gone"
                                android:src="@mipmap/ico_btn_photo" />


                        </RelativeLayout>

                    </RelativeLayout>


                    <!--                    yellowingOfLeaves-->
                    <LinearLayout
                        android:id="@+id/yellowingOfLeavesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/yellowingOfLeaves" />



                        <EditText
                            android:id="@+id/yellowingOfLeavesTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:hint="No.Of Plants/Ha"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </LinearLayout>
                    <!--                    leafDroopingAndDrying-->
                    <LinearLayout
                        android:id="@+id/leafDroopingAndDryingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/leafDroopingAndDrying" />



                        <EditText
                            android:id="@+id/leafDroopingAndDryingTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:hint="No.Of Plants/Ha"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </LinearLayout>

                    <!--                    bracketsIdentified-->
                    <LinearLayout
                        android:id="@+id/bracketsIdentifiedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/bracketsIdentified" />



                        <EditText
                            android:id="@+id/bracketsIdentifiedTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:hint="No.Of Plants/Ha"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </LinearLayout>

                    <!--                    holeOnTheStem-->
                    <LinearLayout
                        android:id="@+id/holeOnTheStemLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/holeOnTheStem" />



                        <EditText
                            android:id="@+id/holeOnTheStemTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:hint="No.Of Plants/Ha"
                            android:layout_weight="1"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </LinearLayout>

                    <!--                    fallenPlants-->
                    <LinearLayout
                        android:id="@+id/fallenPlantsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/fallenPlants" />



                        <EditText
                            android:id="@+id/fallenPlantsTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:hint="No.Of Plants/Ha"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </LinearLayout>

                    <!--                    trichodermaApplied-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/trichodermaApplied" />

                        <Spinner
                            android:id="@+id/trichodermaAppliedSpin"
                            style="@style/spinner_bg"
                            android:layout_width="0dp"
                            android:background="@drawable/spinner_bg"
                            android:entries="@array/yesOrNo_values"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/QuantityinltrLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/Quantityinltr" />



                        <EditText
                            android:id="@+id/QuantityinltrTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:hint="Liters/Ha"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nooftimesappliedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/nooftimesapplied" />



                        <EditText
                            android:id="@+id/nooftimesappliedTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"

                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="10"/>
                    </LinearLayout>
                    <!--                    otherBioProducts-->
                    <LinearLayout
                        android:id="@+id/otherBioProductsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/header_h1_text_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/otherBioProducts" />



                        <EditText
                            android:id="@+id/otherBioProductsTxt"
                            style="@style/editTxt_normal"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                         />
                    </LinearLayout>

                    <!--                    save btn-->
                    <Button
                        android:layout_marginTop="50dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        style="@style/dialogBasicBtnStyle"
                        android:layout_gravity="center"
                        android:id="@+id/Ganodermasave"
                        android:text="@string/save"/>

<!--                    <android.support.v7.widget.RecyclerView-->
<!--                        android:id="@+id/rcmndsaveList"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="20dp"-->
<!--                        android:scrollbars="none" />-->
                </LinearLayout>
            </ScrollView>
        </LinearLayout>




    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>