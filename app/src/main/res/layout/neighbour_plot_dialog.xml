<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/neighbouringPlotTypeTxt"
            style="@style/header_h1_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="Roboto_Regular"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/neighbourPlot_insert"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="Roboto_Regular"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:text="@string/crop_grown" />

        <Spinner
            android:id="@+id/neighbouringCropSpinner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelBtn"
            style="@style/dialogBasicBtnStyle"
            android:layout_margin="10dp"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/saveBtn"
            style="@style/dialogBasicBtnStyle"
            android:layout_margin="10dp"
            android:text="@string/save" />


    </LinearLayout>


</LinearLayout>